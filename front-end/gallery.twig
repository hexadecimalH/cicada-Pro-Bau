{% include 'shared/header.twig' with {'style': style} %}
    <body ng-app="proApp" ng-controller="proCtrl">
        <div class="container-fluid" id="firstCont">
            <div class="row">
            {% include 'shared/navigation.twig' %}
                <!--Responsive nav Endeee -->
                <div class="navigator">

                </div>
                <div class="notMoving">

                </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 sectionTwo">
                </div>
                <div class="col-sm-12 titleing ">
                    <div class="inner">
                        <h3 class="projects">GALERIE</h3>
                    </div>
                </div>
            </div>
            <div class="row tumbs">
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

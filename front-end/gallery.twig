                    <div class="col-sm-4 thumb">
                        <div class="thumbnail">
                            <div>
                                <a class="example-image-link" href="{{picture.url}}" data-lightbox="Pro-Bau Gallerie" data-title="Gallerie">
                                    <img class="example-image" src="{{picture.url}}" alt=""/>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                {% include 'shared/footer.twig' %}
            </div>
        </div>
        <script src="/front-end/js/lightbox.min.js"></script>
